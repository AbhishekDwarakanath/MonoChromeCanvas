<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.innominds.kitemonochrome.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mAltered"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select"
        android:id="@+id/selectBtn"
        android:layout_below="@+id/mAltered"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        style="@style/Widget.AppCompat.Button.Small"
        android:visibility="gone"
        android:id="@+id/rightBtn"
        android:layout_alignBottom="@+id/selectBtn"
        android:layout_toEndOf="@+id/selectBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/leftBtn"
        style="@style/Widget.AppCompat.Button.Small"
        android:visibility="gone"
        android:layout_alignTop="@+id/selectBtn"
        android:layout_toStartOf="@+id/selectBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/homeBtn"
        android:layout_alignTop="@+id/selectBtn"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale*10"
        android:id="@+id/scale10"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_below="@+id/selectBtn"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scale to 84*48"
        android:id="@+id/scale"
        android:layout_below="@+id/selectBtn"
        android:layout_alignStart="@+id/selectBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2ABC"
        android:id="@+id/btn2"
        android:layout_below="@+id/selectBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/btn1"
        android:layout_alignBottom="@+id/btn2"
        android:layout_toStartOf="@+id/btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3CDF"
        android:id="@+id/btn3"
        android:layout_alignBottom="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5JKL"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4GHI"
        android:id="@+id/btn4"
        android:layout_alignBottom="@+id/btn5"
        android:layout_toStartOf="@+id/btn5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6MNO"
        android:id="@+id/btn6"
        android:layout_alignBottom="@+id/btn5"
        android:layout_alignStart="@+id/btn3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8TUV"
        android:id="@+id/btn8"
        android:layout_below="@+id/btn5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7PQRS"
        android:id="@+id/btn7"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toStartOf="@+id/btn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9WXYZ"
        android:id="@+id/btn9"
        android:layout_alignBottom="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn8"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/btnstar"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toStartOf="@+id/btn0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#^"
        android:id="@+id/btnhash"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toEndOf="@+id/btn0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/btncall"
        android:layout_below="@+id/homeBtn"
        android:layout_alignStart="@+id/homeBtn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/cancelbtn"
        android:layout_below="@+id/selectBtn"
        android:layout_toEndOf="@+id/scale10" />
</RelativeLayout>
